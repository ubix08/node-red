# Node-RED Lightweight Backend Environment Variables

# Server Configuration
PORT=1880
NODE_ENV=production

# Admin API Authentication (REQUIRED)
# Generate password hash using: node -e "console.log(require('bcryptjs').hashSync('your-password', 8))"
NODE_RED_USERNAME=admin
NODE_RED_PASSWORD_HASH=$2a$08$zZWtXTja0fB1pzD4sHCMyOCMYz2Z6dNbM6tl8sJogENOMcxWV9DN.

# Credentials Encryption (RECOMMENDED)
# Generate secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NODE_RED_CREDENTIAL_SECRET=your-secret-key-here

# Optional: Logging Configuration
NODE_RED_LOG_LEVEL=warn

# Optional: Disable telemetry explicitly
NODE_RED_DISABLE_TELEMETRY=true
